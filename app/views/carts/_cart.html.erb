<%= turbo_frame_tag @cart do %>
  <details class="relative">
    <summary>
      <%= number_to_currency(@cart.total_price) %>
    </summary>
    <div class="absolute right-0 w-96 p-2 bg-white rounded-b-lg shadow-lg">
      <div class="divide-y divide-gray-200">
        <%= render @cart.line_items %>
      </div>
      <div class="flex justify-between p-1 font-black border-t-2 border-gray-500">
        <span>Subtotal:</span>
        <span><%= number_to_currency @cart.total_price %></span>
      </div>
    </div>
  </details>
<% end %>
